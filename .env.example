# DeepSeek API Key
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Kimi (Moonshot AI) API Key — https://platform.moonshot.ai
KIMI_API_KEY=your_kimi_api_key_here

# PostgreSQL Database
DATABASE_URL=postgresql://nexus:nexus_password@localhost:5433/vdo_content

# ========================================
# Google TTS Configuration (Choose ONE)
# ========================================

# Option 1: Simple Mode (Neural2 voices)
# - Easy setup, just get API key from AI Studio
# - Standard quality (decent but not as natural as Gemini)
GOOGLE_TTS_API_KEY=your_google_api_key_here

# Option 2: Advanced Mode (Gemini 2.5 TTS - AI Studio quality)
# - Requires Google Cloud service account setup
# - Highest quality, same voices as AI Studio web interface
# - Uncomment these lines and add your values:
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
# GCP_PROJECT_ID=your-gcp-project-id

# ========================================
# API Security
# ========================================
# API secret key for FastAPI authentication
# Leave empty to disable auth (development mode)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_SECRET_KEY=

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:8501,http://localhost:3000,http://localhost:8000

# Default settings
DEFAULT_STYLE=documentary
DEFAULT_LANGUAGE=th
MAX_SCENE_DURATION=8.0

# ========================================
# Google Drive Upload (Optional)
# ========================================
# Service Account credentials for uploading videos to Google Drive
# 1. Create Service Account in GCP Console
# 2. Download JSON key file
# 3. Share Drive folder with service account email
GOOGLE_SERVICE_ACCOUNT_FILE=/path/to/service-account-key.json
GOOGLE_DRIVE_FOLDER_ID=1YRFq0KvZ65QRp1psXkUDK6onIALswhE3

# Pexels API (for stock videos)
PEXELS_API_KEY=your_pexels_api_key_here

# ========================================
# Groq API (Cloud Whisper - Free tier)
# ========================================
# Used for cloud-based audio transcription (no local RAM needed)
# Sign up free at: https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# ========================================
# Strategy Engine Integration
# ========================================

# Shared secret for Strategy Engine → vdo-content webhook auth.
# The Strategy Engine sends this as: Authorization: Bearer <token>
# vdo-content verifies it. Generate with:
#   python -c "import secrets; print(secrets.token_urlsafe(32))"
STRATEGY_ENGINE_TOKEN=

# --- Strategy Engine API Keys ---
# These are only needed when running strategy-engine locally via docker compose
OPENAI_API_KEY=sk-your-openai-key-here
# Optional: DataForSEO (keyword volume verification)
# DATAFORSEO_LOGIN=your-dataforseo-login
# DATAFORSEO_PASSWORD=your-dataforseo-password

